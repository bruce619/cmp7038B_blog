<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <!-- Fontawesome CDN  -->
    <script src="https://kit.fontawesome.com/62765ee528.js" crossorigin="anonymous"></script>
    <!-- css -->
    <link rel="stylesheet" href="/css/styles.css" />
    <!-- js -->
    <script src="/js/login.js" defer></script>
  </head>
  <body>
    <header>
      <div class="container">
        <nav class="navbar">
          <div class="navbar__brand">
            <img src="/img/company-logo.png" alt="logo" />
          </div>
          <div class="navbar__links">
            <ul>
              <li class="nav-link"><a href="/">Home</a></li>
              <li class="nav-link"><a href="/login">Login</a></li>
              <li class="nav-link"><a href="/register">Sign Up</a></li>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <div class="signup-container">
          <form action="/login" method="POST" id="login-form" class="signup-form">
            <div class="formGroup">
              <input type="text" name="post_title" id="post_title" placeholder="Post Title" required/>
            </div>
            <div class="formGroup">
              <textarea class="form-control" name="new_post" id="new_post" placeholder="New Post" required></textarea>
            </div>
            <button class="btn__signup justify-content-end">Post</button>
          </form>
          
          <div>
            <div id="error"></div>
          </div>
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer__top-content">
          <span>
            <a href="#">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
          </span>
          <span>
            <a href="#">
              <i class="fa-brands fa-twitter"></i>
            </a>
          </span>
          <span>
            <a href="#">
              <i class="fa-brands fa-instagram"></i>
            </a>
          </span>
        </div>
        <div class="footer__bottom-content">
          <p>@2023 C.H.O Blog</p>
        </div>
      </div>
    </footer>
  </body>
</html>
