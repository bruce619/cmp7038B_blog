<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <!-- Fontawesome CDN  -->
    <script src="https://kit.fontawesome.com/62765ee528.js" crossorigin="anonymous"></script>
    <!-- css -->
    <link rel="stylesheet" href="/css/styles.css" />
    <!-- js -->
    <script src="/js/forgot_password.js" defer></script>
  </head>
  <body>
    <header>
      <div class="container">
        <nav class="navbar">
          <div class="navbar__brand">
            <a href="/"><img src="/img/company-logo.png" alt="logo" /></a>
          </div>
          <div class="navbar__links">
            <ul>
              <li class="nav-link"><a href="/">Home</a></li>
              <li class="nav-link"><a href="/login">Login</a></li>
              <li class="nav-link"><a href="/register">Sign Up</a></li>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <div class="page-heading">
          <h2>Send password retrieval link to your email</h2>
        </div>
        <div class="signup-container">
          <form action="/forgot-password" method="POST" id="forgot-password-form" class="signup-form">
            <div class="formGroup">
              <input type="email" name="email" id="email" placeholder="Email" required/>
            </div>

            <button class="btn__signup">Submit</button>
          </form>
          
          <div>

            <div>
              <% if (error.length > 0) {%>
                <div id="error-msg">
                  <i class="fa fa-times-circle"></i>
                  <%= error %>
                </div>
              <%}else{%>
                <div id="error-msg"></div>
              <%}%>
            </div>

              <% if (success.length > 0){%>
                <div id="success-msg">
                  <i class="fa fa-check"></i>
                  <%= success %>
                </div>
              <%}%>

              <% if (info.length > 0){%>
                <div id="info-msg">
                  <i class="fa fa-info-circle"></i>
                  <%= info %>
                </div>
              <%}%>

          </div>
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer__top-content">
          <span>
            <a href="#">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
          </span>
          <span>
            <a href="#">
              <i class="fa-brands fa-twitter"></i>
            </a>
          </span>
          <span>
            <a href="#">
              <i class="fa-brands fa-instagram"></i>
            </a>
          </span>
        </div>
        <div class="footer__bottom-content">
          <p>@2023 C.H.O Blog</p>
        </div>
      </div>
    </footer>
  </body>
</html>
