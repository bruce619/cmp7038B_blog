<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <!-- Fontawesome CDN  -->
    <script src="https://kit.fontawesome.com/62765ee528.js" crossorigin="anonymous"></script>
    <!-- css -->
    <link rel="stylesheet" href="/css/styles.css" />

  </head>
  <body>
    <header>
      <div class="container">
        <nav class="navbar">
          <div class="navbar__brand">
            <img src="/img/company-logo.png" alt="logo" />
          </div>
          <div class="navbar__links">
            <ul>
              <li class="nav-link"><a href="/">Home</a></li>
              <li class="nav-link"><a href="#">Profile</a></li>
              <li class="nav-link"><a href="/logout">Logout</a></li>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <div class="page-heading">
          <span class="line"></span>
          <h2>Profile</h2>
          <span class="line"></span>
        </div>
        <div class="signup-container">
          <form action="/profile" method="POST" class="signup-form">
            <div class="user">
              <h3>Chimuanya Ibecheozor</h3>
              <div class="user-image">
                <img src="/img/default-profile-image.jpg" alt="profile-pics" />
              </div>
              <label for="profile-image">Choose Picture</label>
              <input
                type="file"
                name="profile-image"
                id="profile-image"
                accept=".jpg, .png, . jpeg" />
            </div>

            <div class="formGroup">
              <input type="emai" name="email" id="email" placeholder="email" readonly/>
            </div>
            <div class="formGroup">
              <input type="text" name="first_name" id="first_name" placeholder="Firstname" required/>
            </div>
            <div class="formGroup">
              <input type="text" name="last_name" id="last_name" placeholder="Lastname" required/>
            </div>
            <div class="formGroup">
              <input type="text" name="username" id="username" placeholder="Username" required/>
            </div>
            <div class="formGroup">
              <input type="date" name="dob" id="dob" />
            </div>

            <div class="formGroup">
              <textarea
                name="bio"
                placeholder="Bio"
                id="bio"
                cols="30"
                rows="10"></textarea>
            </div>
            <label for="Auth" class="Auth_label">
              <span>Activate 2 Factor Authentication</span>
              <span class="Auth_checkbox">
                <input type="checkbox" name="two_fa" id="Auth" />
                <span class="switch">
                  <span class="yes">Yes</span>
                  <span class="no">No</span>
                </span>
              </span>
            </label>
            <button class="btn__signup">Update Profile</button>
          </form>
          <div>
            <div id="error"></div>
          </div>
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer__top-content">
          <span>
            <a href="#">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
          </span>
          <span>
            <a href="#">
              <i class="fa-brands fa-twitter"></i>
            </a>
          </span>
          <span>
            <a href="#">
              <i class="fa-brands fa-instagram"></i>
            </a>
          </span>
        </div>
        <div class="footer__bottom-content">
          <p>@2023 C.H.O Blog</p>
        </div>
      </div>
    </footer>
  </body>
</html>
