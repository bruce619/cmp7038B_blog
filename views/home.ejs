<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <!-- Fontawesome CDN  -->
    <script src="https://kit.fontawesome.com/62765ee528.js" crossorigin="anonymous"></script>
    <!-- css -->
    <link rel="stylesheet" href="/css/styles.css" />
    <!-- js -->
    <script src="/js/search.js" defer></script>
  </head>
  <body>
    <header>
      <div class="container">
        <nav class="navbar">
          <div class="navbar__brand">
            <a href="/"><img src="/img/company-logo.png" alt="logo" /></a>
          </div>
          <div class="navbar__links">
            <ul>
              <li class="nav-link"><a href="/">Home</a></li>
              <!-- <li class="nav-link"><a href="/profile.html">Profile</a></li> -->
              <li class="nav-link"><a href="/profile">Profile</a></li>
              <li class="nav-link"><a href="/logout">Log Out</a></li>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <main>
        <div class="container home">
            <div class="searchbar-container">
                <div class="searchbar">
                    <form action="/" method="GET" id="search_form">
                        <input type="text" id="search" name="search" placeholder="Search for post" />
                        <button type="submit">Search</button>
                    </form>
                </div>
                <% if (error.length > 0) {%>
                  <div id="error-msg">
                    <i class="fa fa-times-circle"></i>
                    <%= error %>
                  </div>
                <%}else{%>
                  <div id="error-msg"></div>
                <%}%>
            </div>
            <% if (success.length > 0){%>
              <div id="success-msg">
                <i class="fa fa-check"></i>
                <%= success %>
              </div>
            <%}%>
  
            <% if (info.length > 0){%>
              <div id="info-msg">
                <i class="fa fa-info-circle"></i>
                <%= info %>
              </div>
            <%}%>
            <div class="main">
            <div class="main__content">

              <% if (posts.length>0){%>

                <% posts.forEach(post => {%>
                  <div class="post-card">
                    <div class="post-card__heading">
                        <div class="user">
                            <img src="<%= post.user.profile_picture %>" alt="profile-pics" />
                            <p><%= post.user.username %></p>
                        </div>
                        <div class="time">
                        <p><%= post.created_at.toLocaleString() %></p>
                        <!-- <p>13:00</p> -->
                        </div>
                    </div>
                    <div class="post-card__content">
                        <h2><%= post.title %></h2>
                        <p>
                          <%= post.body.slice(0, 90) + '...' %>
                        <a href="/post-detail/<%= post.id %>">See more</a>
                        </p>
                    </div>
                    </div>
                <%}); %>
                  
                <!--PAGINATION -->
                <div class="pagination">
                  <% if (current_page > 1) {%>
                    <button class="pagination__back">
                      <a href="/?page=<%= current_page - 1 %>">
                        <i class="fa-solid fa-chevron-left"></i>
                      </a>
                  </button>
                  <%}%>

                  <% for (let i = 1; i <= total_pages; i++){%>
                    <% if (i === current_page){%>
                      <button class="pagination__button"><%= i %></button>
                    <%}else{%>
                      <button class="pagination__button">
                        <a href="/?page=<%=i%>"><%= i %></a>
                      </button>
                    <%}%>

                  <%}%>

                  <% if (current_page < total_pages){%>

                    <button class="pagination__next">
                      <a href="/?page=<%= current_page + 1 %>">
                        <i class="fa-solid fa-chevron-right"></i>
                      </a>
                    </button>

                  <%}%> 

                </div>
                <!-- PAGINATION -->

              <%}else if (search_results.length>0){%>

                <% search_results.forEach(search_result => {%>
                  <div class="post-card">
                    <div class="post-card__heading">
                        <div class="user">
                            <img src="<%= search_result.user.profile_picture %>" alt="profile-pics" />
                            <p><%= search_result.user.username %></p>
                        </div>
                        <div class="time">
                        <p><%= search_result.created_at.toLocaleString() %></p>
                        <!-- <p>13:00</p> -->
                        </div>
                    </div>
                    <div class="post-card__content">
                        <h2><%= search_result.title %></h2>
                        <p>
                          <%= search_result.body.slice(0, 90) + '...' %>
                        <a href="/post-detail/<%= search_result.id %>">See more</a>
                        </p>
                    </div>
                    </div>
                <%}); %>

                  <!--PAGINATION -->
                  <div class="pagination">
                    <% if (current_page > 1) {%>
                      <button class="pagination__back">
                        <a href="/?page=<%= current_page - 1 %>">
                          <i class="fa-solid fa-chevron-left"></i>
                        </a>
                    </button>
                    <%}%>
  
                    <% for (let i = 1; i <= total_pages; i++){%>
                      <% if (i === current_page){%>
                        <button class="pagination__button"><%= i %></button>
                      <%}else{%>
                        <button class="pagination__button">
                          <a href="/?page=<%=i%>"><%= i %></a>
                        </button>
                      <%}%>
  
                    <%}%>
  
                    <% if (current_page < total_pages){%>
  
                      <button class="pagination__next">
                        <a href="/?page=<%= current_page + 1 %>">
                          <i class="fa-solid fa-chevron-right"></i>
                        </a>
                      </button>
  
                    <%}%> 
  
                  </div>
                  <!-- PAGINATION -->

              <%} else {%>
                <h3>No Available Posts</h1>
              <%}%>

            </div>
            <aside class="aside">
                <div class="aside__content">
                <div class="anouncement__image">
                    <img src="/img/image_placeholder.png" alt="announcements" />
                </div>
                <h3>Announcements</h3>
                <p>Lorem ipsum dolor sit amet.</p>
                <p>Lorem ipsum dolor sit amet.</p>
                <p>Lorem ipsum dolor sit amet.</p>
                </div>
            </aside>
            </div>
        </div>
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer__top-content">
          <span>
            <a href="#">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
          </span>
          <span>
            <a href="#">
              <i class="fa-brands fa-twitter"></i>
            </a>
          </span>
          <span>
            <a href="#">
              <i class="fa-brands fa-instagram"></i>
            </a>
          </span>
        </div>
        <div class="footer__bottom-content">
          <p>@2023 C.H.O Blog</p>
        </div>
      </div>
    </footer>
  </body>
</html>